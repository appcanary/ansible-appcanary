api_key = "{{api_key}}"

{% if ansible_distribution == 'Ubuntu' or ansible_distribution == 'Debian' %}
[[files]]
path = "/var/lib/dpkg/status"
{% endif %}

{% if ansible_distribution == 'CentOS' and ansible_distribution_major_version ==  '7' %}
[[files]]
path = "rpm -qa"
{% endif %}

{% for file in monitored_files %}
[[files]]
path = "{{ file }}"
{% endfor %}
